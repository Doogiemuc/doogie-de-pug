{
  "name": "doogie-de-pug",
  "private": false,
  "description": "Roberts personal blog. Created with love and the awesome PUG library",
  "license": "open source",
  "version": "1.0.0",
  "author": "Doogie",
  "scripts": {
    "start": "node buildSite.js",
    "parcel-serve": "parcel site/index.pug --log-level 4",
    "parcel-build": "parcel build site/index.pug",
    "dev": "supervisor -w site --extensions js,pug,json,css --timestamp --no-restart-on success buildSite.js",
    "serve": "reload --dir dist --watch-dir dist --port 3007 --browser"
  },
  "dependencies": {
    "json5": "^2.2.2",
    "ncp": "^2.0.0",
    "parcel": "^1.12.4"
  },
  "keywords": [
    "doogie.de",
    "static site generator"
  ],
  "devDependencies": {
    "pug": "^3.0.1",
    "reload": "^3.1.1",
    "supervisor": "^0.12.0"
  }
}
